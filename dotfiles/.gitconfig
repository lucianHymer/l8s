[core]
    editor = nvim
    autocrlf = input
    whitespace = trailing-space,space-before-tab

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = green
    changed = yellow
    untracked = red

[alias]
    st = status
    co = checkout
    br = branch
    ci = commit
    unstage = reset HEAD --
    last = log -1 HEAD
    lg = log --oneline --graph --decorate
    amend = commit --amend
    
[push]
    default = current

[pull]
    rebase = true

[init]
    defaultBranch = main

[diff]
    tool = nvimdiff